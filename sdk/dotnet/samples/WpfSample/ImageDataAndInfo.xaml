<Window x:Class="WpfSample.ImageDataAndInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="ImageDataAndInfo" Height="450" Width="800">
    <Grid>
        <Label Margin="35,59,673,318">Image Info:</Label>
        <Button x:Name="BtnBrowseFileOpen" 
            Margin="617,94,45,289" Click="BtnBrowseFileOpen_OnClick">Browse Image File</Button>
        <TextBox x:Name="TbxImageInfo" Margin="35,94,222,145" TextWrapping="Wrap" AcceptsReturn="True"/>
        <Button x:Name="BtnSubmit" 
            Margin="440,355,222,29" Click="BtnSubmit_OnClick">Submit</Button>
        <Button x:Name="BtnCancel" 
            Margin="617,355,45,29" Click="BtnCancel_OnClick">Cancel</Button>

    </Grid>
</Window>
