<Window x:Class="WpfSample.ImageDataAndInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample"
        mc:Ignorable="d"
        Title="ImageDataAndInfo" Height="450" Width="800">
    <DockPanel>
        <Grid>
            <Label Margin="35,41,673,336">Image Info:</Label>
            <Button x:Name="BtnBrowseFileOpen" 
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,81,40,0" Height="30" Width="140" Click="BtnBrowseFileOpen_OnClick">Browse Image File</Button>
            <TextBox x:Name="TbxImageInfo" Margin="35,81,222,89" TextWrapping="Wrap" AcceptsReturn="True"/>
            <Button x:Name="BtnSubmit" 
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,222,40" Height="30" Width="140" Click="BtnSubmit_OnClick">Submit</Button>
            <Button x:Name="BtnCancel" 
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="40,40,40,40" Height="30" Width="140" Click="BtnCancel_OnClick">Cancel</Button>

        </Grid>
    </DockPanel>
</Window>
